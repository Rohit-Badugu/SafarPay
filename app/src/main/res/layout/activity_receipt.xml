<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_receipt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.toll.tollapp.ReceiptActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/receipt_toolbar" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="15dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="5dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receipt No. "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123457 "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="40dp">
    <TextView

        android:text="Date : "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:text="23/ 03 / 2017"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"/>

    </LinearLayout>



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:layout_marginTop="20dp">
        <View
            android:layout_height="2dip"
            android:background="#FF909090" />


        <TableRow>
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_column="1"
                android:text="Toll ID "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:padding="15dp"
                />
            <TextView
                android:layout_marginRight="90dp"
                android:text="125 "
                android:id="@+id/toll_id"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:padding="15dp"
                />
        </TableRow>

        <TableRow>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_column="1"
            android:text="Toll Name "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="15dp"
            />
        <TextView
            android:layout_marginRight="90dp"
            android:text="Pune Toll "
            android:id="@+id/toll_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="15dp"
            />
        </TableRow>


        <TableRow>
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_column="1"
                android:text="Vehicle No. "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:padding="15dp"
                />
            <TextView
                android:layout_marginRight="90dp"
                android:text="MH 789"
                android:id="@+id/vehicle_no"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:padding="15dp"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_column="1"
                android:text="Vehicle Type "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:padding="15dp"
                />
            <TextView
                android:layout_marginRight="90dp"
                android:text=" Car "
                android:id="@+id/user_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:padding="15dp"
                />
        </TableRow>



        <TableRow>
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_column="1"
                android:text="Amount "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:padding="15dp"
                />
            <TextView
                android:layout_marginRight="90dp"
                android:text=" Rs. 75 "
                android:id="@+id/amt"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:padding="15dp"
                />
        </TableRow>


        <View
            android:layout_height="2dip"
            android:background="#FF909090" />
    </TableLayout>


    <ImageView
        android:padding="10dp"
        android:layout_marginTop="55dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/qr"/>


</LinearLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>
</RelativeLayout>
